<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wcccd.wcccditcareerprograms.CisVideoGameDesignAndAnimationCert">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/xlargeLand_Img_width"
        android:layout_height="@dimen/xlargeLand_Img_height"
        app:srcCompat="@drawable/logo_wcccd"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="590dp"
        android:layout_height="285dp"
        android:gravity="left"
        android:text="@string/VideoGameDesign_OverView"
        android:textSize="@dimen/xlargeLandTextOverView_TextSize"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8" />

    <Button
        android:id="@+id/gameDesignButton"
        android:layout_width="@dimen/xlargeLandButton_width"
        android:layout_height="@dimen/xlargeLandButton_height"
        android:layout_marginStart="215dp"
        android:layout_marginTop="45dp"
        android:text="@string/TapHereButton"
        android:textSize="18sp"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/imageView8" />
</RelativeLayout>
