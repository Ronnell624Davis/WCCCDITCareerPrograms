<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wcccd.wcccditcareerprograms.CisCyberSecurityCert">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/logo_wcccd"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="700dp"
        android:layout_height="213dp"
        android:layout_marginTop="71dp"
        android:gravity="left"
        android:text="@string/CyberSecurCert_OverView"
        android:textSize="30sp"
        android:layout_alignTop="@+id/imageView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="371dp" />

    <Button
        android:id="@+id/cyberSecurCertButton"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginTop="62dp"
        android:text="@string/TapHereButton"
        android:textSize="18sp"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/imageView7"
        android:layout_marginStart="216dp" />
</RelativeLayout>
