<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:weightSum="1"
    tools:context="com.wcccd.wcccditcareerprograms.WelcomeScreenMainActivity">

    <Button
        android:id="@+id/tapToViewButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:onClick="tapToViewPrograms"
        android:text="Tap Here To View Programs"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/wcccdImageView"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/logo_wcccd" />

    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="253dp"
        android:layout_height="103dp"
        android:text="Welcome To Wayne County Community College District ITI Career Programs"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/wcccdImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />
</RelativeLayout>

