<?xml version="1.0" encoding="utf-8"?>
<!--android.support.constraint.-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wcccd.wcccditcareerprograms.ApplicationDeveloperCert">

    <!--ImageView was just a test. Delete ImageView and go ahead add your own desire
    layout for the purpose of this app-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/logo_wcccd" />

    <Button
        android:id="@+id/appDevButton"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/TapHereButton"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="550dp"
        android:layout_height="133dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="left"
        android:text="@string/AppDev_OverView"
        android:textSize="25sp" />

</RelativeLayout>

